      + getCarteBayesienne(): double[][]
    }
    class Position{
     - x: int
     - y: int
     + Position(int, int)
     + setX(int): void
     + setY(int): void
     + getX(): int
     + getY(): int
     + deplacer(int, int): void
     + deplacer(Deplacement): void
    }

    class Personnage{
      + {abstract} deplacer(int, int): void
      + {abstract} deplacer(Position): void
      + getPosition(): Position
    }

    class Agent{
      + Agent(int, int)
    }
    class Joueur{
      + Joueur(int, int)
    }
  }
}

